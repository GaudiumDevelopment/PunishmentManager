<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>me.superbiebel</groupId>
        <artifactId>PunishmentManager</artifactId>
        <version>NOT-REAL-VERSION</version>
    </parent>

    <artifactId>defaultmysqldatabase</artifactId>
    <version>NOT-REAL-VERSION</version>
    <packaging>jar</packaging>

    <name>DefaultMysqlDatabase</name>

    <properties>
        <maven.compiler.source>14</maven.compiler.source>
        <maven.compiler.target>14</maven.compiler.target>
        <java.version>1.14</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>14</source>
                    <target>14</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>com.zaxxer.hikari</pattern>
                                    <shadedPattern>${project.groupId}.shaded.com.zaxxer.hikari</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.simplix.core.database.simplixcore-database-sql</pattern>
                                    <shadedPattern>${project.groupId}.shaded.dev.simplix.core.database.simplixcore-database-sql</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.projectlombok.lombok</pattern>
                                    <shadedPattern>${project.groupId}.shaded.org.projectlombok.lombok</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github.simplix-softworks.simplixstorage</pattern>
                                    <shadedPattern>${project.groupId}.shaded.com.github.simplix-softworks.simplixstorage</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>me.superbiebel.offenseprocessingdataabstraction</pattern>
                                    <shadedPattern>${project.groupId}.shaded.me.superbiebel.offenseprocessingdataabstraction</shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                        <exclude>META-INF/*.MF</exclude>
                                        <exclude>META-INF/*</exclude>
                                        <exclude>META-INF/maven/org.json/json/pom.properties</exclude>
                                        <exclude>META-INF/maven/org.json/json/pom.xml</exclude>
                                        <exclude>META-INF/maven/org.json/json/pom.properties</exclude>
                                        <exclude>org.jetbrains.annotations.NonNls</exclude>
                                        <exclude>org.jetbrains.annotations.Nullable</exclude>
                                        <exclude>META-INF/maven/com.esotericsoftware.yamlbeans/yamlbeans/pom.properties</exclude>
                                        <exclude>META-INF/maven/com.esotericsoftware.yamlbeans/yamlbeans/pom.xml</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>spigotmc-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        <repository>
            <id>sonatype</id>
            <url>https://oss.sonatype.org/content/groups/public/</url>
        </repository>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
        <repository>
            <id>simplixsoft-public</id>
            <url>https://repo.simplix.dev/repository/simplixsoft-public/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>me.superbiebel</groupId>
            <artifactId>PunishmentManagerCore</artifactId>
            <version>NOT-REAL-VERSION</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.16.4-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>dev.simplix.core</groupId>
            <artifactId>simplixcore-database-sql</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
            <version>3.4.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.16</version>
        </dependency>
        <dependency>
            <groupId>me.lucko</groupId>
            <artifactId>helper</artifactId>
            <version>5.6.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.github.simplix-softworks</groupId>
            <artifactId>simplixstorage</artifactId>
            <version>3.2.0</version>
        </dependency>
        <dependency>
            <groupId>me.superbiebel</groupId>
            <artifactId>offenseprocessingdataabstraction</artifactId>
            <version>NOT-REAL-VERSION</version>
        </dependency>
    </dependencies>
</project>
